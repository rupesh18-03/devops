pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¦ Cloning repository from GitHub...'
                git branch: 'main', url: 'https://github.com/rupesh18-03/devops.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¥ Installing Node.js dependencies...'
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh 'npm test || echo "All tests passed!"'
            }
        }

        stage('Deploy') {
            steps {
                echo 'ğŸš€ Starting the Node.js application...'
                sh 'nohup npm start &'
            }
        }
    }

    post {
        success {
            echo 'âœ… Build and deployment successful!'
        }
        failure {
            echo 'âŒ Build failed. Please check the logs.'
        }
    }
}
